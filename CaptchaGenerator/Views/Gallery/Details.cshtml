@using CaptchaGenerator.Localization

@model CaptchaEntities.Captcha.CaptchaEntity

@{
    ViewBag.Title = Resources.Details;
}

<h2>@Resources.Details</h2>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd class="image-display-item">
            @Html.DisplayFor(model => model.Image, "Image")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Solution)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Solution)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Back, string.Empty)
</p>
