@using CaptchaGenerator.Localization

@model IEnumerable<CaptchaEntities.Captcha.CaptchaEntity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Neues Captcha erzeugen", "Create", "Captcha")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solution)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="image-display-list">
            @Html.DisplayFor(modelItem => item.Image, "Image")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Solution)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink( @Resources.Delete, "Delete", new { id = item.Id } )
        </td>
    </tr>
}

</table>
